<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jellebouwmans.celebcompare.MainActivity"
    android:background="@drawable/redcarpet">

    <ImageButton
        android:id="@+id/btnCam"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="16dp"
        android:onClick="btnCameraClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChoosePicture"
        app:srcCompat="@drawable/cam" />

    <ImageButton
        android:id="@+id/btnFile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="16dp"
        android:onClick="btnFileClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtChoosePicture"
        app:srcCompat="@drawable/files" />

    <ImageButton
        android:id="@+id/imgbtnMale"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="175dp"
        android:onClick="btnMaleClick"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imgbtnFemale"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="175dp"
        android:onClick="btnFemaleClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtChoosePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose picture:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnFemale" />

    <TextView
        android:id="@+id/txtChooseGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Choose gender:"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imgbtnFemale"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
